<!doctype html>
{% do view.registerAssetBundle('craft\\web\\assets\\cp\\CpAsset') -%}
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>P&T Plugin for Front</title>
    <meta name="description" content="Front integration for P&T">
    <meta name="author" content="Luke Holder">

    {% css %}
        body {
            margin-top:20px;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
        h2 {
            text-align: center;
        }
        textarea {
            display: block;
            width: 250px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 2px;
        }
        button {
            display: block;
            width: 250px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 2px;
        }
    {% endcss %}

    {% includeJsFile "https://dl.frontapp.com/libs/frontjs.min.js" %}
    {% includeCssFile "https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" %}
</head>
<body>
<div class="container">
    {% block container %}
    {% endblock %}
</div>
</body>
</html>