files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/98_create_symlinks.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      mkdir /efs/cpresources
      mkdir /efs/storage
      mkdir /efs/composer
      chown webapp:webapp /efs/cpresources
      chown webapp:webapp /efs/storage
      chown webapp:webapp /efs/composer
      rm -rf /var/app/current/web/cpresources
      ln -sf /efs/cpresources /var/app/current/web/cpresources
      ln -sf /efs/composer /var/app/current/web/composer
      chown webapp:webapp /var/app/current/web/cpresources
      chown webapp:webapp /var/app/current/web/composer
