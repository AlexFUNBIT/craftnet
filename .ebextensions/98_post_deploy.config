files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_post_deploy.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      mv -f /home/ec2-user/oauth-server /var/app/current/config/keys/oauth-server
      mv -f /home/ec2-user/oauth-server.pub /var/app/current/config/keys/oauth-server.pub
      /var/app/current/craft clear-caches/twigpack-manifest-cache
      mkdir /home/ec2-user/.aws
      printf '[backup]\naws_access_key_id=`{"Fn::GetOptionSetting": {"Namespace": "aws:elasticbeanstalk:application:environment", "OptionName": "BACKUP_S3_ACCESS_KEY_ID"}}`\naws_secret_access_key=`{"Fn::GetOptionSetting": {"Namespace": "aws:elasticbeanstalk:application:environment", "OptionName": "BACKUP_S3_SECRET_ACCESS_KEY"}}`\nregion=`{"Fn::GetOptionSetting": {"Namespace": "aws:elasticbeanstalk:application:environment", "OptionName": "REGION"}}`' > /home/ec2-user/.aws/config