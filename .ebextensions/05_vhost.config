# see https://www.roth-digital.de/2013/01/26/multi-domain-projects-on-aws-elastic-beanstalk/

files:
  "/etc/httpd/conf.d/vhost.conf":
    mode: "000644"
    owner: root
    group: root
    encoding: plain
    content: |
      NameVirtualHost *:80

      <VirtualHost *:443>
        ServerName composer.craftcms.com
        DocumentRoot /efs/composer/
      </VirtualHost>
