{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "ip": {
          "type": "string",
          "oneOf": [
            {"format": "ipv4"},
            {"format": "ipv6"}
          ]
        },
        "hostname": {
          "type": "string",
          "format": "hostname"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65536
        }
      },
      "required": ["ip", "hostname", "port"]
    },
    "user": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        }
      },
      "required": ["email"]
    },
    "platform": {
      "type": "object",
      "items": {
        "type": "string"
      },
      "required": ["php"],
      "oneOf": [
        {"required": ["mysql"]},
        {"required": ["pgsql"]}
      ]
    },
    "cms": {
      "type": "object",
      "properties": {
        "licenseKey": {
          "type": "string",
          "minLength": 250,
          "maxLength": 250
        },
        "edition": {
          "type": "string",
          "enum": ["personal", "client", "pro"]
        },
        "version": {
          "type": "string"
        }
      },
      "required": ["licenseKey", "edition", "version"]
    },
    "plugins": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "licenseKey": {
              "type": ["string", "null"],
              "minLength": 24,
              "maxLength": 24
            },
            "version": {
              "type": "string"
            }
          },
          "required": ["licenseKey", "version"]
        }
      }
    }
  },
  "required": ["request", "user", "platform", "cms", "plugins"]
}
