{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "email": {"type": "string", "format": "email"},
    "billingAddressId": {"type": "integer"},
    "billingAddress": {
      "type": "object",
      "properties": {
        "attention": {"type": ["string", "null"]},
        "title": {"type": ["string", "null"]},
        "firstName": {"type": "string"},
        "lastName": {"type": "string"},
        "address1": {"type": "string"},
        "address2": {"type": ["string", "null"]},
        "city": {"type": "string"},
        "state": {"type": ["string", "null"]},
        "country": {"type": "string", "pattern": "^[A-Z][A-Z]$"},
        "zipCode": {"type": "string"},
        "phone": {"type": ["string", "null"]},
        "alternativePhone": {"type": ["string", "null"]},
        "businessName": {"type": ["string", "null"]},
        "businessId": {"type": ["string", "null"]},
        "businessTaxId": {"type": ["string", "null"]}
      },
      "required": ["attention", "title", "firstName", "lastName", "city", "country", "zipCode", "phone", "alternativePhone", "businessName", "businessId", "businessTaxId"]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "note": {"type": "string"},
          "cms-edition": {
            "type": "object",
            "properties": {
              "edition": {"enum": ["client", "pro"]},
              "licenseKey": {"$ref": "definitions.json#/cmsLicenseKey"}
            },
            "required": ["edition", "licenseKey"]
          },
          "cms-renewal": {
            "type": "object",
            "properties": {
              "licenseKey": {"$ref": "definitions.json#/cmsLicenseKey"}
            },
            "required": ["licenseKey"]
          },
          "plugin-edition": {
            "type": "object",
            "properties": {
              "plugin": {"type": "string"},
              "edition": {"type": "string"},
              "licenseKey": {"$ref": "definitions.json#/pluginLicenseKey"},
              "cmsLicenseKey": {"$ref": "definitions.json#/cmsLicenseKey"}
            },
            "required": ["plugin", "edition"]
          },
          "plugin-renewal": {
            "type": "object",
            "properties": {
              "plugin": {"type": "string"},
              "licenseKey": {"$ref": "definitions.json#/pluginLicenseKey"}
            },
            "required": ["plugin", "licenseKey"]
          }
        },
        "anyOf": [
          {"required": ["cms-edition"]},
          {"required": ["cms-renewal"]},
          {"required": ["plugin-edition"]},
          {"required": ["plugin-renewal"]}
        ]
      }
    },
    "couponCode": {"type": "string"}
  }
}
