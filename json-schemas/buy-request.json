{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "email": {"type": "string", "format": "email"},
    "cc": {
      "type": "object",
      "properties": {
        "token": {"type": "string"},
        "expMonth": {"type": "integer", "minimum": 1, "maximum": 12},
        "expYear": {"type": "integer", "minimum": 2018}
      },
      "required": ["token", "expMonth", "expYear"]
    },
    "billingAddress": {
      "type": "object",
      "properties": {
        "attention": {"type": ["string", "null"]},
        "title": {"type": ["string", "null"]},
        "firstName": {"type": "string"},
        "lastName": {"type": "string"},
        "address1": {"type": "string"},
        "address2": {"type": ["string", "null"]},
        "city": {"type": "string"},
        "state": {"type": ["string", "null"]},
        "country": {"type": "string", "pattern": "^[A-Z][A-Z]$"},
        "zipCode": {"type": "string"},
        "phone": {"type": ["string", "null"]},
        "alternativePhone": {"type": ["string", "null"]},
        "businessName": {"type": ["string", "null"]},
        "businessId": {"type": ["string", "null"]},
        "businessTaxId": {"type": ["string", "null"]}
      },
      "required": ["attention", "title", "firstName", "lastName", "city", "country", "zipCode", "phone", "alternativePhone", "businessName", "businessId", "businessTaxId"]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "price": {"$ref": "definitions.json#/price"},
          "salePrice": {"$ref": "definitions.json#/price"},
          "discount": {"$ref": "definitions.json#/price"}
        },
        "required": ["type", "price", "salePrice", "discount"],
        "anyOf": [
          {
            "properties": {
              "type": {"enum": ["cms-edition"]},
              "edition": {"enum": ["client", "pro"]},
              "licenseKey": {"$ref": "definitions.json#/cmsLicenseKey"}
            },
            "required": ["edition", "licenseKey"]
          },
          {
            "properties": {
              "type": {"enum": ["cms-renewal"]},
              "licenseKey": {"$ref": "definitions.json#/cmsLicenseKey"}
            },
            "required": ["licenseKey"]
          },
          {
            "properties": {
              "type": {"enum": ["plugin-edition"]},
              "plugin": {"type": "string"},
              "edition": {"type": "string"},
              "licenseKey": {
                "anyOf": [
                  {"$ref": "definitions.json#/pluginLicenseKey"},
                  {"type": "null"}
                ]
              },
              "cmsLicenseKey": {
                "anyOf": [
                  {"$ref": "definitions.json#/cmsLicenseKey"},
                  {"type": "null"}
                ]
              }
            },
            "required": ["plugin", "edition"]
          },
          {
            "properties": {
              "type": {"enum": ["plugin-renewal"]},
              "plugin": {"type": "string"},
              "licenseKey": {"$ref": "definitions.json#/pluginLicenseKey"}
            },
            "required": ["plugin", "licenseKey"]
          }
        ]
      },
      "minItems": 1
    },
    "couponCode": {"type": ["string", "null"]},
    "couponDiscount": {
      "anyOf": [
        {"$ref": "definitions.json#/price"},
        {"type": "null"}
      ]
    },
    "tax": {"$ref": "definitions.json#/price"},
    "totalPrice": {"$ref": "definitions.json#/price"},
    "notes": {"type": ["string", "null"]}
  },
  "required": ["email", "items", "tax", "totalPrice", "notes"]
}
